<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/friend_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:id="@+id/ui_friend_info"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="left"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friend_photo"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp" />

        <TextView
            android:id="@+id/friend_name"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|start"
            android:paddingHorizontal="8dp"
            android:textSize="18dp" />

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/searching_btn"
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="요청중..."
                android:textSize="12dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/search_btn"
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="찾기"
                android:textSize="12dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/sub_reject_btn"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button_refuse"
                android:text="거절"
                android:textSize="10dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/sub_apply_btn"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="-20dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="수락"
                android:textSize="10dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/sharing_btn"
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="공유중..."
                android:textSize="12dp"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>